// Extends: https://github.com/tsconfig/bases/blob/main/bases/node16.json
{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["lib/**/*"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "target": "es2022",
    "lib": ["es2022"],
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "noUncheckedIndexedAccess": true,
    "declaration": true
  }
}
